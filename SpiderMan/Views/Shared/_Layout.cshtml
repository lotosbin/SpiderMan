@using sharp_net.Mvc
<!DOCTYPE html>
<html ng-app="spiderman">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SpiderMan</title>
    <link href="~/Images/spidertocat.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/master.css" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="site-title" href="/">SpiderMan</a>
        <nav>
            <ul id="menu">
                <li class="@Html.IsSelected("Task", null)">@Html.ActionLink("TaskBoard", "Index", "Task")</li>
                <li class="@Html.IsSelected("TaskModel", null)">@Html.ActionLink("TaskModel", "Index", "TaskModel")</li>
                <li class="@Html.IsSelected("Site", null)">@Html.ActionLink("Site", "Index", "Site")</li>

                <li class="article-huanle mt20"><a href="~/article/#/huanle">Huanle</a>
                    <a class="extand" href="~/article/#/huanle/available">availe</a>
                    <a class="extand" href="~/article/#/huanle/disable">dis</a></li>
                <li class="article-dianbo"><a href="~/article/#/dianbo">Dianbo</a>
                    <a class="extand" href="~/article/#/dianbo/available">availe</a>
                    <a class="extand" href="~/article/#/dianbo/disable">dis</a></li>
                <li class="article-shudong"><a href="~/article/#/shudong">Shudong</a>
                    <a class="extand" href="~/article/#/shudong/available">availe</a>
                    <a class="extand" href="~/article/#/shudong/disable">dis</a></li>
                <li class="article-geek"><a href="~/article/#/geek">Geek</a>
                    <a class="extand" href="~/article/#/geek/available">availe</a>
                    <a class="extand" href="~/article/#/geek/disable">dis</a></li>
                <li class="article-finance"><a href="~/article/#/finance">Finance</a>
                    <a class="extand" href="~/article/#/finance/available">availe</a>
                    <a class="extand" href="~/article/#/finance/disable">dis</a></li>

                <li class="@Html.IsSelected("UserName", null) mt20">@Html.ActionLink("UserName", "Index", "UserName")</li>
                <li class="@Html.IsSelected("Avator", null)">@Html.ActionLink("Avator", "Index", "Avator")</li>
            </ul>
        </nav>
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
        <footer>
            &copy; @DateTime.Now.Year - I am SpiderMan, bitch!
        </footer>
    </header>
    <div id="body">@RenderBody()</div>

    @Scripts.Render("~/bundles/base")
    @*<script src="~/Scripts/master.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>