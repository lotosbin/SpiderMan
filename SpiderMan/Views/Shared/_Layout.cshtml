@using sharp_net.Mvc
<!DOCTYPE html>
<html lang="zh" ng-app="spiderman">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SpiderMan</title>
    <link href="~/Images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/master.css" rel="stylesheet" />
</head>
<body>
    <header>
        <a class="site-title" href="/">SpiderMan</a>
        <nav>
            <ul id="menu">
                <li class="@Html.IsSelected("Task", null)">@Html.ActionLink("Task", "Index", "Task")</li>
                <li class="@Html.IsSelected("TaskModel", null)">@Html.ActionLink("TaskModel", "Index", "TaskModel")</li>
                <li class="@Html.IsSelected("Site", null)">@Html.ActionLink("Site", "Index", "Site")</li>
                <li class="@Html.IsSelected("Huanle", null) mt20">@Html.ActionLink("Huanle", "Index", "Huanle")</li>
                <li class="@Html.IsSelected("Dianbo", null)">@Html.ActionLink("Dianbo", "Index", "Dianbo")</li>
                <li class="@Html.IsSelected("Shudong", null)">@Html.ActionLink("Shudong", "Index", "Shudong")</li>
                <li class="@Html.IsSelected("Geek", null)">@Html.ActionLink("Geek", "Index", "Geek")</li>
                <li class="@Html.IsSelected("Finance", null)">@Html.ActionLink("Finance", "Index", "Finance")</li>
                <li class="@Html.IsSelected("UserName", null) mt20">@Html.ActionLink("UserName", "Index", "UserName")</li>
                <li class="@Html.IsSelected("Avator", null)">@Html.ActionLink("Avator", "Index", "Avator")</li>
            </ul>
        </nav>
        <section id="login">
            @Html.Partial("_LoginPartial")
        </section>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - I am SpiderMan, bitch!</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/base")
    @*<script src="~/Scripts/master.js"></script>*@
    @RenderSection("scripts", required: false)
</body>
</html>
