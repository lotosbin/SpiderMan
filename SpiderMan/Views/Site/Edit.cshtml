@model SpiderMan.Models.Site
@using sharp_net.Repositories;
@using sharp_net.Mvc;

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <ol>
        <li>
            @Html.LabelFor(model => model.Act)
            @Html.DropDownListFor(model => model.Act, ((eAct)Model.Act).ToSelectListItems())
        </li>
        <li>
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </li>
        <li>
            @Html.LabelFor(model => model.Link)
            @Html.EditorFor(model => model.Link)
            @Html.ValidationMessageFor(model => model.Link)
        </li>
        <li>
            @Html.LabelFor(model => model.GrabInterval)
            @Html.EditorFor(model => model.GrabInterval)
            @Html.ValidationMessageFor(model => model.GrabInterval)
        </li>
    </ol>
    <p>
        <input type="submit" value="Save" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
